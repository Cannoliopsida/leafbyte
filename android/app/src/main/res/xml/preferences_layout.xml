<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="@string/preferences_data_save_location_key"
        android:title="@string/preferences_data_save_location_title"

        android:defaultValue="@string/preferences_save_location_none_array_key"
        android:entries="@array/preferences_save_location_array_names"
        android:entryValues="@array/preferences_save_location_array_keys" />
    <ListPreference
        android:key="@string/preferences_image_save_location_key"
        android:title="@string/preferences_image_save_location_title"

        android:defaultValue="@string/preferences_save_location_none_array_key"
        android:entries="@array/preferences_save_location_array_names"
        android:entryValues="@array/preferences_save_location_array_keys" />

    <com.thebluefolderproject.leafbyte.TrimmingEditTextPreference
        android:key="@string/preferences_dataset_name_key"
        android:title="@string/preferences_dataset_name_title"

        android:defaultValue="@string/preferences_dataset_name_default" />
    <Preference
        android:key="@string/preferences_use_previous_dataset_key"
        android:title="@string/preferences_use_previous_dataset_title" />

    <EditTextPreference
        android:key="scale_length_preference"
        android:title="Scale Length"
        android:defaultValue="10.0"
        android:dialogLayout="@layout/preference_edit_decimal_numeric_text"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true" />
    <ListPreference
        android:key="units_preference"
        android:title="Scale Length Units"
        android:defaultValue="cm"
        android:entries="@array/units"
        android:entryValues="@array/units" />
    <EditTextPreference
        android:key="next_sample_number_preference"
        android:title="Next Sample Number"
        android:defaultValue="1"
        android:dialogLayout="@layout/preference_edit_numeric_text"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true" />
    <SwitchPreference
        android:key="scan_barcodes_preference"
        android:title="Scan Barcodes?"
        android:defaultValue="false" />
    <SwitchPreference
        android:key="save_gps_location_preference"
        android:title="Save GPS Location?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false" />
    <SwitchPreference
        android:key="use_black_background_preference"
        android:title="Use Black Background?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false" />
    <Preference
        android:key="sign_out_of_google"
        android:title="Sign out of Google" />

    <!--seems like either of these enableds work, but cabeing paranoid-->
    <Preference
        android:key="version"
        android:title=""
        android:enabled="false"
        app:enabled="false" />

</PreferenceScreen>
