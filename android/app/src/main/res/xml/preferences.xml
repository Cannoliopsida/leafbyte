<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="@string/preference_key_data_save_location"

        android:defaultValue="None"
        android:entries="@array/save_location_names"
        android:entryValues="@array/save_location_keys"
        android:title="Data Save Location"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />
    <ListPreference
        android:key="@string/preference_key_image_save_location"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="None"
        android:entries="@array/save_location_names"
        android:entryValues="@array/save_location_keys"
        android:title="Image Save Location"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />
    <com.thebluefolderproject.leafbyte.TrimmingEditTextPreference
        android:defaultValue="Herbivory Data"
        android:key="dataset_name_preference"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Dataset Name"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />
    <Preference
        android:key="use_previous_dataset"
        android:title="Use previous dataset"
        app:iconSpaceReserved="false" />
    <EditTextPreference
        android:defaultValue="10.0"
        android:dialogLayout="@layout/preference_edit_decimal_numeric_text"
        android:inputType="number"
        android:key="scale_length_preference"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Scale Length"
        app:iconSpaceReserved="false" />
    <ListPreference
        android:defaultValue="cm"
        android:entries="@array/units"
        android:entryValues="@array/units"
        android:key="units_preference"
        android:title="Scale Length Units"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:defaultValue="1"
        android:dialogLayout="@layout/preference_edit_numeric_text"
        android:inputType="number"
        android:key="next_sample_number_preference"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Next Sample Number"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="scan_barcodes_preference"
        android:title="Scan Barcodes?"
        app:iconSpaceReserved="false" />
    <SwitchPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:key="save_gps_location_preference"
        android:title="Save GPS Location?"
        app:iconSpaceReserved="false" />
    <SwitchPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:key="use_black_background_preference"
        android:title="Use Black Background?"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="sign_out_of_google"
        android:title="Sign out of Google"
        app:iconSpaceReserved="false" />

    <!--seems like either of these enableds work, but cabeing paranoid-->
    <Preference
        android:enabled="false"
        android:key="version"
        android:title=""
        app:enabled="false"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
